

# ================ BEGIN USER ADDITIONS ============================== 
# appended by cli_setup.sh
# alternatively: `cat dotfiles/.bashrc_additons >> ~/.bashrc`

# display git branch in PS1 prompt
parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# newline before PS1
PROMPT_COMMAND="printf '\n'"

# PS1 prompt
PS1="\[$(tput sgr0)\]\[$(tput bold)\]\[\033[38;5;135m\]\u@\h:\[$(tput sgr0)\] \w\[$(tput bold)\]\$(parse_git_branch) \n\[$(tput sgr0)\]\[$(tput bold)\]\[\033[38;5;135m\]\\$\[$(tput sgr0)\] \[$(tput sgr0)\]"

# initialize pyenv if installed
if command -v pyenv &> /dev/null ; then
    eval "$(pyenv init -)"
fi

# ================ END USER ADDITIONS ================================ 


